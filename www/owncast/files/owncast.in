#!/bin/sh

# $FreeBSD$
#
# PROVIDE: owncast
# REQUIRE: DAEMON
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf.local or /etc/rc.conf
# to enable this service:
#
# owncast_enable (bool):	Set it to YES to enable owncast.
#			Default is "NO".
# owncast_user (user):	Set user to run owncast.
#			Default is "owncast".
# owncast_group (group):	Set group to run owncast.
#			Default is "owncast".
# owncast_config (dir):	Set owncast config file.
#			Default is "%%PREFIX%%/etc/owncast.hcl".
# owncast_syslog_output_enable (bool):	Set to enable syslog output.
#					Default is "NO". See daemon(8).
# owncast_syslog_output_priority (str):	Set syslog priority if syslog enabled.
#					Default is "info". See daemon(8).
# owncast_syslog_output_facility (str):	Set syslog facility if syslog enabled.
#					Default is "daemon". See daemon(8).

. /etc/rc.subr

name=owncast
rcvar=owncast_enable

load_rc_config $name

: ${owncast_enable:="NO"}
: ${owncast_user:="owncast"}
: ${owncast_group:="owncast"}
: ${owncast_config:="%%PREFIX%%/etc/owncast.hcl"}

DAEMON=$(/usr/sbin/daemon 2>&1 | grep -q syslog ; echo $?)
if [ ${DAEMON} -eq 0 ]; then
        : ${owncast_syslog_output_enable:="NO"}
        : ${owncast_syslog_output_priority:="info"}
        : ${owncast_syslog_output_facility:="daemon"}
        if checkyesno owncast_syslog_output_enable; then
                owncast_syslog_output_flags="-t ${name} -T ${name}"

                if [ -n "${owncast_syslog_output_priority}" ]; then
                        owncast_syslog_output_flags="${owncast_syslog_output_flags} -s ${owncast_syslog_output_priority}"
                fi

                if [ -n "${owncast_syslog_output_facility}" ]; then
                        owncast_syslog_output_flags="${owncast_syslog_output_flags} -l ${owncast_syslog_output_facility}"
                fi
        fi
else
        owncast_syslog_output_enable="NO"
        owncast_syslog_output_flags=""
fi

pidfile=/var/run/owncast.pid
procname="%%PREFIX%%/bin/owncast"
command="/usr/sbin/daemon"
command_args="-f ${owncast_syslog_output_flags} -p ${pidfile} /usr/bin/env ${owncast_env} ${procname} server -config=${owncast_config}"

extra_commands="reload monitor"
monitor_cmd=owncast_monitor
start_precmd=owncast_startprecmd
required_files="$owncast_config"

owncast_monitor()
{
	sig_reload=USR1
	run_rc_command "reload"
}

owncast_startprecmd()
{
        if [ ! -e ${pidfile} ]; then
                install -o ${owncast_user} -g ${owncast_group} /dev/null ${pidfile};
        fi

        if [ ! -d ${owncast_dir} ]; then
                install -d -o ${owncast_user} -g ${owncast_group} ${owncast_dir}
        fi
}

run_rc_command "$1"
